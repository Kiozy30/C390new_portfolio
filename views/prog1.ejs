            });

            $(".test-link").mouseenter(function() {
                cursor.css({
                    transform: "scale(2)"
                });
                console.log("Link hover in"); 
            }).mouseleave(function() {
                cursor.css({
                    transform: "scale(1)"
                });
                console.log("Link hover out");
            });

            $(window).mousedown(function() {
                cursor.css({
                    transform: "scale(0.5)"
                });
                console.log("Mouse down"); 
            }).mouseup(function() {
                cursor.css({
                    transform: "scale(1)"
                });
                console.log("Mouse up"); 
            });
        });
    </script>
